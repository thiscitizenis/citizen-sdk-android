<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="is.citizen.citizenapi.examples.FingerprintLoginExample"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/example_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Example Description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4e39a8"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="36dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/example_result_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Result Description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4e39a8"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/example_description"
        tools:layout_constraintLeft_creator="1" />

     <TextView
        android:id="@+id/example_result_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4e39a8"
        android:textSize="18sp"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         tools:layout_constraintTop_creator="1"
         tools:layout_constraintRight_creator="1"
         app:layout_constraintTop_toBottomOf="@+id/example_result_description"
         tools:layout_constraintLeft_creator="1" />

     <TextView
        android:id="@+id/example_run_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Run Example"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4e39a8"
        android:textSize="18sp"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         tools:layout_constraintTop_creator="1"
         tools:layout_constraintRight_creator="1"
         android:layout_marginTop="51dp"
         app:layout_constraintTop_toBottomOf="@+id/example_numerical_input"
         tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/example_numerical_input"
        android:hint="Enter Number"
        android:inputType="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/example_result_value"
        tools:layout_constraintLeft_creator="1" />

    <Spinner
        android:id="@+id/example_spinner"
        android:layout_width="50dp"
       android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/example_run_example"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/example_numerical_input"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/example_run_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/example_run_example"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.501" />

     <TextView
        android:id="@+id/example_next_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Next Example"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4e39a8"
        android:textSize="18sp"
         app:layout_constraintRight_toLeftOf="@+id/example_next_button"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintHorizontal_bias="0.729"
         tools:layout_constraintBottom_creator="1"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_marginBottom="45dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/example_next_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_media_next"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="38dp" />

</android.support.constraint.ConstraintLayout>
